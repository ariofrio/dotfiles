[user]
	name = Andres Riofrio
	email = riofrios@gmail.com
[core]
	excludesfile = /home/ariofrio/.gitignore_global
	autocrlf = input
[credential]
	helper = cache --timeout=3600

# From http://jblevins.org/log/git-colors
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[push]
	default = simple
